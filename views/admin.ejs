<!-- register.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&family=Roboto+Mono:wght@600&display=swap"
      rel="stylesheet"
    />
    <title>Registration</title>
    <style>
      html,
      body {
        height: 100%;
        font-family: "Roboto Mono", monospace;
      }
      .wrapper {
        min-height: 100%;
        position: relative;
      }
      * {
        margin: 0;
        padding: 0;
      }
      header {
        font-size: 2rem;
        height: 100px;
        background-color: #001e2b;
        color: #00ed64;
      }

      .nav-items {
        display: flex;
        gap: 30px;
        font-size: 1.5rem;
        font-family: "Montserrat", sans-serif;
      }

      button {
        color: #001e2b;
        background-color: #00ed64;
        width: 100px;
        font-size: 1rem;
        cursor: pointer;
        font-family: "Montserrat", sans-serif;
        font-weight: 400;
      }
      nav {
        margin: 0 20px 0 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 400px;
      }
      .logo {
        font-family: "Bowlby One SC", sans-serif;
        font-weight: 400;
        opacity: 0.8;
      }
      nav h3 {
        font-size: 4rem;
      }
      main {
        margin-top: 5%;
        text-align: center;
        height: 100%;
        margin-bottom: 5%;
      }
      h1 {
        margin-bottom: 50px;
      }
      #addUser {
        margin: 0 0 100px 0;
      }
      input {
        height: 30px;
        width: 30%;
      }

      footer {
        display: flex;
        font-family: "Roboto Mono", monospace;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #001e2b;
        color: #00ed64;
        position: absolute;
        bottom: 0;
        width: 100%;
      }

      .field {
        margin-bottom: 10px;
      }

      button:hover {
        background-color: #001e2b;
        color: #00ed64;
      }
      .delete-button {
        width: 100%;
      }

      a {
        text-decoration: none;
        color: inherit;
      }
      table {
        border-collapse: collapse;
        width: 80%;
        margin: 0 auto;
        margin-bottom: 200px;
      }
      th,
      td {
        border: 1px solid black;
        padding: 8px;
        text-align: center;
      }
      .edit-button {
        background-color: #001e2b;
        color: #00ed64;
        width: 60px;
      }

      .edit-button:hover {
        color: #001e2b;
        background-color: #00ed64;
      }
      th {
        background-color: #f2f2f2;
      }
      @media only screen and (max-width: 700px) {
        body {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <header>
        <nav>
          <div class="logo">
            <a href="/home">
              <h3>CS</h3>
            </a>
          </div>

          <div class="nav-items">
            <div class="nav-item">Notes</div>
            <div class="nav-item">Recipes</div>
            <div class="nav-item">Cocktails</div>
            <div class="nav-item">Profile</div>
          </div>
        </nav>
      </header>
      <main>
        <h1>ADMIN PANEL</h1>
        <div id="addUser" class="wrap-form">
          <form action="/admin/users/add" method="post">
            <label for="username">Username:</label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="Enter username"
              required
            />
            <label for="password">Password:</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Enter password"
              required
            />
            <button type="submit">Add User</button>
          </form>
        </div>
        <table>
          <thead>
            <tr>
              <th>Username</th>
              <th>Creation Date</th>
              <th>Update Date</th>
              <th>Admin Status</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.createdAt %></td>
              <td><%= user.updatedAt %></td>
              <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
              <td>
                <form
                  id="editForm-<%= user._id %>"
                  action="/admin/users/<%= user._id %>/update"
                  method="post"
                >
                  <input
                    type="text"
                    name="username"
                    placeholder="username"
                    form="editForm-<%= user._id %>"
                    required
                  />
                  <input
                    type="password"
                    name="password"
                    placeholder="password"
                    form="editForm-<%= user._id %>"
                    required
                  />

                  <button class="edit-button" type="submit">Edit</button>
                </form>
              </td>
              <td>
                <form
                  action="/admin/users/<%= user._id %>/delete"
                  method="post"
                >
                  <button class="delete-button" type="submit">Delete</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </main>
    </div>
  </body>
</html>
